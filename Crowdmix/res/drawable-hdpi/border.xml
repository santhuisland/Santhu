<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<!-- The negative padding gets rid of the top border! -->
	<item
		android:bottom="1dp"
		android:left="1dp"
		android:right="1dp"
		android:top="-4dp">
		<shape android:shape="rectangle" >
			<stroke
				android:width="1dp"
				android:color="@color/lightGrey" />

			<solid android:color="@color/white" />

			<padding
				android:bottom="2dp"
				android:left="2dp"
				android:right="2dp"
				android:top="2dp" >
			</padding>
		</shape>
	</item>

</layer-list>