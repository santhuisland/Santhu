<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/ReportHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReportBackground"
            android:src="@drawable/cardinal_direction"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="false" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direction"
            android:layout_centerInParent="true"
            android:src="@drawable/compass_dial"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/FavouriteLavout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ReportHeaderLayout"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        >
        <ListView
            android:id="@+id/FavourateListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_below="@+id/WeatherExtraDetailsText"
            android:background="@android:color/white"
            android:choiceMode="singleChoice"
            android:divider="@color/colorAccent"
            android:dividerHeight="0dp"
            android:longClickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="@dimen/text_control_height"
            android:text="Speed:00 , Degree:00"
            android:textStyle="bold"
            android:minLines="1"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/WindDetailsText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="@dimen/text_control_height"
            android:text="Speed:00 , Degree:00"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="@dimen/text_size_normal"
            android:gravity="center"
            android:layout_below="@+id/WindDetailsText"
            android:textColor="@android:color/white"
            android:id="@+id/WeatherExtraDetailsText"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FavouriteEmptyLavout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ReportHeaderLayout"
        android:background="@android:color/white"
        android:layout_marginTop="70dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Empty_Favourates_text"
            android:textStyle="bold"
            android:minLines="3"
            android:textSize="@dimen/text_size_normal"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:id="@+id/EmptyText"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</RelativeLayout>
